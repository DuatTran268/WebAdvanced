@model TatBlog.WebApp.Areas.Admin.Models.TagFilterModel

<form asp-area="Admin"
	  asp-controller="Tags"
	  asp-action="Index"
	  method="get"
	  class="row gy-2 gx-3 align-items-center">

	<div class="col-auto">
		<label class="visually-hidden" asp-for="Keyword"></label>
		<input class="form-control" placeholder="Nhập vào từ khoá ..." asp-for="Keyword" type="text" />
	</div>


	<div class="col-auto">
		<a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Tags" asp-action="Index">
			Bỏ Lọc
		</a>
		<button type="submit" class="btn btn-primary">Tìm/Lọc</button>
		<a asp-area="Admin" asp-controller="Tags" asp-action="Edit" class="btn btn-success">
			Thêm mới
		</a>
	</div>
</form>