@model TatBlog.WebApp.Areas.Admin.Models.CategoryFilterModel

<form asp-area="Admin"
	  asp-controller="Categories"
	  asp-action="Index"
	  method="get"
	  class="row gy-2 gx-3 align-items-center">

	<div class="col-auto">
		<label class="visually-hidden" asp-for="Keyword"></label>
		<input class="form-control" placeholder="Nhập vào từ khoá ..." asp-for="Keyword" type="text" />
	</div>

	<div class="col-auto">
		<div class="form-check">
			<input class="form-check-input" type="checkbox" />
			<label class="form-check-label"></label>
			<label class="text-danger">Chưa công khai</label>
		</div>
	</div>

	<div class="col-auto">
		<a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Categories" asp-action="Index">
			Bỏ Lọc
		</a>
		<button type="submit" class="btn btn-primary">Tìm/Lọc</button>
		<a asp-area="Admin" asp-controller="Categories" asp-action="Edit" class="btn btn-success">
			Thêm mới
		</a>
	</div>
</form>