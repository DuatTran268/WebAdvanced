@model TatBlog.WebApp.Areas.Admin.Models.PostFilterModel

@{
	ViewData["PageTitle"] = "Manage Posts";

	var postList = ViewBag.PostList as IPagedList<Post>;

}

<h1>
	Danh sách bài viết
</h1>

<!--Hiển thị Form để tìm bài viết-->
<partial name="_PostFilterPane" model="Model" />



@if (postList != null && postList.Count > 0)
{
	<table class="table table-responsive table-striped">
		<thead>
			<tr>
				<th>Tiêu đề</th>
				<th>Tác giả</th>
				<th>Chủ đề </th>
				<th>Trạng thái</th>
				<th>Xoá</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var post in postList)
			{
				<tr>
					<td>
						<a asp-area="Admin"
				   asp-controller="Posts"
				   asp-action="Edit"
				   asp-route-id="@post.Id"
				   class="text-bold">
							@post.Title
						</a>

						<p class="text-muted">
							@post.ShortDescrption
						</p>
					</td>
					<td>
						@post.Author.FullNames
					</td>
					<td>
						@post.Category.Name
					</td>
					<td>
						<a class="btn"
				   asp-area="Admin"
				   asp-controller="Posts"
				   asp-action="PublicPostStatus"
				   asp-route-id="@post.Id">
							@if (post.Published)
							{
								@*<i class="fa fa-unlock"></i>*@
								<i class="fa fa-globe" style="color:blue"></i>
								<span style="color: blue">Public</span>
							}
							else
							{
								<i class="fa fa-lock" style="color:red"></i>
								<span style="color:red">Private</span>
							}
						</a>
					</td>

					<td>
						<a class="btn"
					   asp-area="Admin"
					   asp-controller="Posts"
					   asp-action="RemovePost"
					   asp-route-id="@post.Id">
							<i class="fa fa-trash" style="color:red"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<partial name="_Pager" model="postList" />
}
else
{
	<h1 class="text-danger text-center mt-5">
		Không tìm thấy bài viết nào
	</h1>
}

<script language="javascript" type="text/javascript">
	function fnConfirmDelete() {
		return confirm("Are you sure you want to delete this?");
	}
</script>