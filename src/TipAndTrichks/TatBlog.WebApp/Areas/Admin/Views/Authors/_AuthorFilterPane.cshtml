@model TatBlog.WebApp.Areas.Admin.Models.AuthorFilterModel

<form asp-area="Admin"
	  asp-controller="Authors"
	  asp-action="Index"
	  method="get"
	  class="row gy-2 gx-3 align-items-center">

	<div class="col-auto">
		<label class="visually-hidden" asp-for="Keyword"></label>
		<input class="form-control" placeholder="Nhập vào từ khoá ..." asp-for="Keyword" type="text" />
	</div>


	<div class="col-auto">
		<label class="visually-hidden" asp-for="Month"></label>
		<select class="form-select" asp-for="Month" asp-items="Model.MonthsList">
			<option value="selected">--Chọn tháng--</option>
		</select>
	</div>

	<div class="col-auto">
		<label class="visually-hidden" asp-for="Year"></label>
		<input class="form-control" placeholder="Nhập vào năm" asp-for="Year" type="text" />
	</div>


	<div class="col-auto">
		<a class="btn btn-outline-danger" asp-area="Admin" asp-controller="Authors" asp-action="Index">
			Bỏ Lọc
		</a>
		<button type="submit" class="btn btn-primary">Tìm/Lọc</button>
		<a asp-area="Admin" asp-controller="Authors" asp-action="Edit" class="btn btn-success">
			Thêm mới
		</a>
	</div>



</form>